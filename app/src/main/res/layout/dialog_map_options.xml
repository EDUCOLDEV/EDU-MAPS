<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/btnCalcularDistancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_distance"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:text="@string/calculate_distance"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/btnCalcularArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_area"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:text="@string/calculate_area"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/btnLimpiarPuntos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_delete"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:text="@string/clean_points"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/btnLimpiarMapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_delete"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:text="@string/clean_drawable"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:textSize="16sp" />

</LinearLayout>
